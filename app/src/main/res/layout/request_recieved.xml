<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:paddingTop="8dp">

    <androidx.cardview.widget.CardView
            android:id="@+id/requestCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/Camo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.209">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/LightGreen">

            <Button
                    android:id="@+id/btnAcceptRequest"
                    style="@style/AppTheme.RoundedCornerMaterialButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="119dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toStartOf="@+id/btnDeclineRequet"
                    android:text="@string/btn_request_accept" />

            <Button
                    android:id="@+id/btnDeclineRequet"
                    style="@style/AppTheme.RoundedCornerMaterialButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="47dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/btn_decline" />

            <TextView
                    android:id="@+id/displayText"
                    android:layout_width="388dp"
                    android:layout_height="31dp"
                    android:layout_above="@+id/btnAcceptRequest"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="36dp"
                    android:text="TextView"
                    android:textAlignment="gravity"
                    android:textColor="@color/design_default_color_on_secondary" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>